@model ConstructionPlanning.WebApplication.Models.Customer.CustomerCreateViewModel

@{
    ViewData["Title"] = "Довавление нового заказчика";
}

<h1>Довавление нового заказчика</h1>

<h4>Заказчик</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Name" class="form-control" />
                    <div class="text-center">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Description" class="form-control" />
                    <div class="text-center">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Phone" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Phone" class="form-control" />
                    <div class="text-center">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <a asp-action="Index" class="btn btn-secondary float-left">Назад</a>
                </div>
                <div class="col">
                    <input type="submit" value="Добавить" class="btn btn-primary float-right" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
