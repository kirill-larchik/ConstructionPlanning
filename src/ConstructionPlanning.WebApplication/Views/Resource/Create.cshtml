@model ConstructionPlanning.WebApplication.Models.Resource.ResourceCreateViewModel

@{
    ViewData["Title"] = "Довавление нового ресурса";
}

<h1>Довавление нового ресурса</h1>

<h4>Ресурс</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Name" class="form-control" />
                    <div class="text-center">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="TypeId" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="TypeId" class="form-control" asp-items="ViewBag.ResourceTypes">
                    </select>
                    <div class="text-center">
                        <span asp-validation-for="TypeId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="AvaliableAmount" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="AvaliableAmount" class="form-control" />
                    <div class="text-center">
                        <span asp-validation-for="AvaliableAmount" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="UnitCost" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="UnitCost" class="form-control" />
                    <div class="text-center">
                        <span asp-validation-for="UnitCost" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <a asp-action="Index" class="btn btn-secondary float-left">Назад</a>
                </div>
                <div class="col">
                    <input type="submit" value="Добавить" class="btn btn-primary float-right" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
