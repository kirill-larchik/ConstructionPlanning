@model ConstructionPlanning.WebApplication.Models.Provider.ProviderViewModel

@{
    ViewData["Title"] = "Подробная информация о поставщике";
}

<h1>Подробная информация о поставщике</h1>
<h4>Поставщик</h4>
<hr />
<div class="col-md-8">
    <dl class="row">
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-8 bg-light">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-8 bg-light">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-8 bg-light">
            @Html.DisplayFor(model => model.Phone)
        </dd>
    </dl>
    
    <div class="row">
        <div class="col">
            <a asp-action="Index" class="btn btn-secondary float-left">Назад</a> &nbsp;|
            @Html.ActionLink("Получить список поставок", "GetDeliveriesByProviderId", "Delivery", new { providerId = Model.Id }, new { @class="btn btn-primary" })
        </div>
    </div>

</div>
