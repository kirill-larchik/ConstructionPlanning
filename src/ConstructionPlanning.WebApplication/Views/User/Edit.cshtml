@model ConstructionPlanning.WebApplication.Models.User.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}

<h1>Редактирование пользователя</h1>

<h4>Пользователь</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" class="form-control" hidden/>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Email" class="form-control" />
                    <div class="text-center">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Forename" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Forename" class="form-control" />
                    <div class="text-center">
                        <span asp-validation-for="Forename" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Surname" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Surname" class="form-control" />
                    <div class="text-center">
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                </div>
            </div>
            @if (!Model.IsCurrentAdmin)
            {
                <div class="form-group row">
                <label asp-for="IsAdmin" class="col-sm-4 form-check-label"></label>
                <div class="col-sm-8 form-check form-switch">
                    <input asp-for="IsAdmin" aria-label="..." />
                    <div class="text-center">
                        <span asp-validation-for="IsAdmin" class="text-danger"></span>
                    </div>
                </div>
            </div>
            }
            <div class="form-group row">
                <div class="col">
                    <a asp-action="Index" class="btn btn-secondary float-left">Назад</a>
                </div>
                <div class="col">
                    <input type="submit" value="Редактировать" class="btn btn-primary float-right" />
                </div>
            </div>
        </form>
    </div>
</div>